from telegram import Bot
import os

TOKEN = os.getenv("TELEGRAM_TOKEN")
CHAT_ID = os.getenv("TELEGRAM_CHAT_ID")

def main():
    if not TOKEN or not CHAT_ID:
        raise ValueError("TOKEN atau CHAT_ID kosong")

    bot = Bot(token=TOKEN)
    bot.send_message(chat_id=CHAT_ID, text="âœ… Tes bot berhasil dari GitHub Actions")

if __name__ == "__main__":
    main()
